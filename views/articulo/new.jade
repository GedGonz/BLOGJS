    div(class="container marginleft")
       div(class="row margin")
          if message
             if tipo<1
                div(class="alert alert-success text-center" role="alert") #{message}
             else
                div(class="alert alert-danger text-center" role="alert") #{message}
          div(class="col-sm-3 col-md-1")
          div(class="col-sm-6 col-md-10")
  
                form(method='POST', action='/articulo/save', enctype='multipart/form-data')
                    div(class="form-group")
                      div(class="row")
                          div(class="col-md-6")
                              if valse && Articulo && Usuario
                                 input(name="updateart" type="hidden" value=Articulo[0]._id)
                                 input(name="Titulo" type="text" class="form-control" placeholder="Titulo" value= Articulo[0].   Titulo)
                                 br
                                 input(name="Autor" type="text" class="form-control" placeholder="Autor" readOnly="readOnly"    value= Usuario[0].Nombre+" "+Usuario[0].Apellido)
                                 br
                                 label Categoria
                                 select(name="Clasificacion" class="form-control")
                                    option(value="0" ) Seleccione
                                    if Articulo[0].Clasificacion==1
                                       option(value="1" selected) Tecnologia                                
                                       option(value="2") Marketing
                                       option(value="3") Economia
                                       option(value="4") Leyes
                                       option(value="5") Literatura
                                       option(value="6") Ciencia
                                       option(value="7") Moda
                                       option(value="8") Mnanualidades
                                       option(value="9") Otra
                                    else if Articulo[0].Clasificacion==2
                                       option(value="1") Tecnologia                                
                                       option(value="2" selected) Marketing
                                       option(value="3") Economia
                                       option(value="4") Leyes
                                       option(value="5") Literatura
                                       option(value="6") Ciencia
                                       option(value="7") Moda
                                       option(value="8") Mnanualidades
                                       option(value="9") Otra
                                    else if Articulo[0].Clasificacion==3
                                       option(value="1") Tecnologia                                
                                       option(value="2") Marketing
                                       option(value="3" selected) Economia
                                       option(value="4") Leyes
                                       option(value="5") Literatura
                                       option(value="6") Ciencia
                                       option(value="7") Moda
                                       option(value="8") Mnanualidades
                                       option(value="9") Otra
                                    else if Articulo[0].Clasificacion==4
                                       option(value="1") Tecnologia                                
                                       option(value="2") Marketing
                                       option(value="3") Economia
                                       option(value="4" selected) Leyes
                                       option(value="5") Literatura
                                       option(value="6") Ciencia
                                       option(value="7") Moda
                                       option(value="8") Mnanualidades
                                       option(value="9") Otra
                                    else if Articulo[0].Clasificacion==4
                                       option(value="1") Tecnologia                                
                                       option(value="2") Marketing
                                       option(value="3") Economia
                                       option(value="4" selected) Leyes
                                       option(value="5") Literatura
                                       option(value="6") Ciencia
                                       option(value="7") Moda
                                       option(value="8") Mnanualidades
                                       option(value="9") Otra
                                    else if Articulo[0].Clasificacion==5
                                       option(value="1") Tecnologia                                
                                       option(value="2") Marketing
                                       option(value="3") Economia
                                       option(value="4") Leyes
                                       option(value="5" selected) Literatura
                                       option(value="6") Ciencia
                                       option(value="7") Moda
                                       option(value="8") Mnanualidades
                                       option(value="9") Otra
                                    else if Articulo[0].Clasificacion==6
                                       option(value="1") Tecnologia                                
                                       option(value="2") Marketing
                                       option(value="3") Economia
                                       option(value="4") Leyes
                                       option(value="5") Literatura
                                       option(value="6" selected) Ciencia
                                       option(value="7") Moda
                                       option(value="8") Mnanualidades
                                       option(value="9") Otra
                                    else if Articulo[0].Clasificacion==7
                                       option(value="1") Tecnologia                                
                                       option(value="2" ) Marketing
                                       option(value="3") Economia
                                       option(value="4") Leyes
                                       option(value="5") Literatura
                                       option(value="6") Ciencia
                                       option(value="7" selected) Moda
                                       option(value="8") Mnanualidades
                                       option(value="9") Otra
                                    else if Articulo[0].Clasificacion==8
                                       option(value="1") Tecnologia                                
                                       option(value="2") Marketing
                                       option(value="3") Economia
                                       option(value="4") Leyes
                                       option(value="5") Literatura
                                       option(value="6") Ciencia
                                       option(value="7") Moda
                                       option(value="8" selected) Mnanualidades
                                       option(value="9") Otra
