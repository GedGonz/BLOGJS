                                    option(value="1") Tecnologia                                
                                    option(value="2") Marketing
                                    option(value="3") Economia
                                    option(value="4") Leyes
                                    option(value="6") Literatura
                                    option(value="7") Ciencia
                                    option(value="8") Moda
                                    option(value="9") Mnanualidades
